<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/md_16"
	android:paddingLeft="@dimen/md_16"
	android:paddingRight="@dimen/md_16"
	android:paddingTop="@dimen/md_16"
	tools:context="test.xjl12.soeasy.MainActivity"
	tools:showIn="@layout/main_md"
	android:orientation="vertical"
	android:gravity="center">

	<TextView
		android:layout_height="@dimen/height_0"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:text="@string/welcome"
		android:layout_weight="6"
		android:gravity="center"
		android:id="@+id/main_welcome_TextView"
		android:textColor="@color/material_black"/>

	<ImageView
		android:layout_height="0dp"
		android:layout_width="wrap_content"
		android:src="@drawable/happy_new_year_google"
		android:layout_weight="5"/>

	<RelativeLayout
		android:layout_height="0dp"
		android:layout_weight="8"
		android:layout_width="match_parent">

		<EditText
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:hint="@string/main_edit_hint"
			android:gravity="center"
			android:id="@+id/main_m_input"
			android:layout_centerInParent="true"/>

		<com.wayww.edittextfirework.FireworkView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/fire_work"/>

	</RelativeLayout>

</LinearLayout>

