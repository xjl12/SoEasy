<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="@dimen/navigation_height"
	android:layout_width="match_parent"
	android:background="@color/colorPrimary">

	<TextView
		android:layout_height="wrap_content"
		android:text="@string/app_name"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:padding="@dimen/normal_10"
		android:id="@+id/navigation_header_m_app_name"
		android:textColor="@color/white"/>

	<TextView
		android:layout_height="wrap_content"
		android:text="@string/wrong"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:id="@+id/navigation_header_m_version"
		android:textColor="@color/white"
		android:padding="@dimen/normal_10"
		android:layout_toRightOf="@id/navigation_header_m_app_name"
		android:layout_alignParentBottom="true"/>

	<ImageView
		android:layout_height="@dimen/icon_show"
		android:layout_width="@dimen/icon_show"
		android:src="@mipmap/ic_launcher"
		android:layout_above="@id/navigation_header_m_app_name"
		android:paddingBottom="@dimen/md_6"
		android:paddingLeft="@dimen/md_16"/>

</RelativeLayout>

